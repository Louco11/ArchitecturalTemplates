<idea-plugin>
    <id>com.louco.archTemp</id>

    <name>ArchitecturalTemplates</name>

    <vendor email="dor2014spb@gmail.com" url="https://www.linkedin.com/in/mikhail-dorontsov-396266100">Doronec</vendor>

    <description>"google" = piece of shit, removed the feature create group template file</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <treeStructureProvider implementation="extensions.TreeStructure"/>
    </extensions>

    <actions>

        <action id="actions.CreateEmptyTemplateAction"
                class="actions.CreateEmptyTemplateAction"
                text="Create New Template"
                description="Create new template" icon="SdkIcons.Sdk_create_icon">
            <add-to-group group-id="ToolsMenu" anchor="before" relative-to-action="CreateDesktopEntry"/>
        </action>

        <group id="actions.ListTemplateGroup"
               class="actions.ListTemplateGroup"
               text="Templates" popup="true"
               icon="SdkIcons.Sdk_create_icon">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="WeighingNewGroup"/>
        </group>

        <action id="actions.AddFileInTemplate" class="actions.AddFileInTemplate" text="Add File In Template">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="WeighingNewGroup"/>
        </action>

    </actions>
</idea-plugin>